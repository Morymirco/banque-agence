{# templates/compte/pdf_list.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Liste des Comptes</title>
        <style>
            body {
                font-family: Arial, sans-serif;
            }
            .header {
                text-align: center;
                margin-bottom: 20px;
            }
            .content {
                margin: 20px;
            }
            table {
                width: 100%;
                border-collapse: collapse;
            }
            table, th, td {
                border: 1px solid black;
            }
            th, td {
                padding: 10px;
                text-align: left;
            }
            .footer {
                position: fixed;
                bottom: 0;
                text-align: center;
            }
        </style>
    </head>
    <body>
        <div class="header">
            <h1>Liste des Comptes</h1>
        </div>
        <div class="content">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Numéro de compte</th>
                        <th>Propriétaire</th>
                        <th>Propriétaire</th>
                        <th>Solde</th>
                    </tr>
                </thead>
                <tbody>
                    {% for compte in comptes %}
                        <tr>
                            <td>{{ compte.id }}</td>
                            <td>{{ compte.code }}</td>
                            <td>{{ compte.Client }}</td>
                            <td>{{ compte.solde }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="footer">
            <p>Date:{{ "now"|date("d/m/Y") }}</p>
        </div>
    </body>
</html>
